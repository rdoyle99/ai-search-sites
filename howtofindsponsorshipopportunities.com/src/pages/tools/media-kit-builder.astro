---
import Base from '../../layouts/Base.astro';
import { siteConfig } from '../../config';

const schema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Media Kit Builder",
  "applicationCategory": "BusinessApplication",
  "description": "Build a professional sponsorship media kit with your audience data, rates, and past partnerships.",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
};
---

<Base
  title="Media Kit Builder | Find Sponsorship Opportunities"
  description="Free tool: build a professional sponsorship media kit by entering your audience data, engagement metrics, and rates."
  schema={schema}
>
  <section class="max-w-3xl mx-auto px-4 sm:px-6 py-12 md:py-20">
    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900">Media Kit Builder</h1>
    <p class="mt-4 text-lg text-gray-600">
      Fill in your details to generate a professional media kit summary you can copy, paste, and share with brands.
    </p>

    <div class="mt-10 space-y-6">
      <div class="p-6 border border-gray-200 rounded-lg bg-white">
        <h2 class="text-lg font-semibold text-gray-900">1. Your Info</h2>
        <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label for="creator-name" class="block text-sm font-medium text-gray-700">Creator / Brand name</label>
            <input type="text" id="creator-name" placeholder="e.g., TechReview Weekly" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <label for="creator-niche" class="block text-sm font-medium text-gray-700">Niche / Topic</label>
            <input type="text" id="creator-niche" placeholder="e.g., B2B SaaS tools for startups" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div class="sm:col-span-2">
            <label for="creator-bio" class="block text-sm font-medium text-gray-700">One-line description</label>
            <input type="text" id="creator-bio" placeholder="e.g., YouTube channel reviewing the best tools for growing startups" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
        </div>
      </div>

      <div class="p-6 border border-gray-200 rounded-lg bg-white">
        <h2 class="text-lg font-semibold text-gray-900">2. Audience</h2>
        <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label for="platform-main" class="block text-sm font-medium text-gray-700">Primary platform</label>
            <select id="platform-main" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
              <option value="YouTube">YouTube</option>
              <option value="Instagram">Instagram</option>
              <option value="TikTok">TikTok</option>
              <option value="Podcast">Podcast</option>
              <option value="Newsletter">Newsletter</option>
              <option value="Twitter/X">Twitter / X</option>
            </select>
          </div>
          <div>
            <label for="audience-size" class="block text-sm font-medium text-gray-700">Audience size</label>
            <input type="number" id="audience-size" placeholder="25000" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <label for="engagement" class="block text-sm font-medium text-gray-700">Engagement rate (%)</label>
            <input type="number" id="engagement" placeholder="5.2" step="0.1" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <label for="avg-views" class="block text-sm font-medium text-gray-700">Avg. views / opens per post</label>
            <input type="number" id="avg-views" placeholder="8000" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <label for="demo-age" class="block text-sm font-medium text-gray-700">Top age range</label>
            <input type="text" id="demo-age" placeholder="25-34 (68%)" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <label for="demo-geo" class="block text-sm font-medium text-gray-700">Top geography</label>
            <input type="text" id="demo-geo" placeholder="US (72%), UK (12%)" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
        </div>
      </div>

      <div class="p-6 border border-gray-200 rounded-lg bg-white">
        <h2 class="text-lg font-semibold text-gray-900">3. Rates</h2>
        <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label for="rate-integration" class="block text-sm font-medium text-gray-700">Integration / mention ($)</label>
            <input type="number" id="rate-integration" placeholder="500" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <label for="rate-dedicated" class="block text-sm font-medium text-gray-700">Dedicated content ($)</label>
            <input type="number" id="rate-dedicated" placeholder="1500" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
          </div>
        </div>
      </div>

      <div class="p-6 border border-gray-200 rounded-lg bg-white">
        <h2 class="text-lg font-semibold text-gray-900">4. Past Partners (optional)</h2>
        <div class="mt-4">
          <label for="past-partners" class="block text-sm font-medium text-gray-700">Brand names (comma-separated)</label>
          <input type="text" id="past-partners" placeholder="e.g., Notion, Linear, Loom" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        </div>
      </div>

      <button id="generate-btn" class="w-full px-6 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors">
        Generate Media Kit
      </button>

      <div id="output" class="hidden">
        <div class="flex items-center justify-between mb-2">
          <h2 class="text-lg font-semibold text-gray-900">Your Media Kit</h2>
          <button id="copy-btn" class="text-sm text-blue-600 hover:text-blue-800 font-medium">Copy to clipboard</button>
        </div>
        <div id="media-kit-text" class="p-6 bg-gray-50 rounded-lg border border-gray-200 text-sm leading-relaxed whitespace-pre-wrap font-mono"></div>
      </div>
    </div>

    <div class="mt-8 p-6 border border-blue-200 rounded-lg bg-blue-50">
      <p class="text-sm font-medium text-blue-900">Send your media kit with cold email outreach</p>
      <p class="mt-1 text-sm text-blue-700">
        <a href={siteConfig.product.url} target="_blank" rel="noopener noreferrer" class="font-semibold underline">{siteConfig.product.name}</a> helps you find brand contacts and send personalized sponsorship pitches with automated follow-ups.
      </p>
      <a href={siteConfig.product.url} target="_blank" rel="noopener noreferrer" class="mt-3 inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-md hover:bg-blue-700 transition-colors">
        Start pitching with {siteConfig.product.name} &rarr;
      </a>
    </div>
  </section>
</Base>

<script>
  document.getElementById('generate-btn')?.addEventListener('click', () => {
    const name = (document.getElementById('creator-name') as HTMLInputElement).value || 'Your Brand';
    const niche = (document.getElementById('creator-niche') as HTMLInputElement).value || 'Your niche';
    const bio = (document.getElementById('creator-bio') as HTMLInputElement).value || '';
    const platform = (document.getElementById('platform-main') as HTMLSelectElement).value;
    const audienceSize = (document.getElementById('audience-size') as HTMLInputElement).value || '0';
    const engagement = (document.getElementById('engagement') as HTMLInputElement).value || '0';
    const avgViews = (document.getElementById('avg-views') as HTMLInputElement).value || '0';
    const demoAge = (document.getElementById('demo-age') as HTMLInputElement).value || 'Not specified';
    const demoGeo = (document.getElementById('demo-geo') as HTMLInputElement).value || 'Not specified';
    const rateIntegration = (document.getElementById('rate-integration') as HTMLInputElement).value || 'TBD';
    const rateDedicated = (document.getElementById('rate-dedicated') as HTMLInputElement).value || 'TBD';
    const pastPartners = (document.getElementById('past-partners') as HTMLInputElement).value;

    const kit = `═══════════════════════════════════════
  ${name.toUpperCase()} — MEDIA KIT 2026
═══════════════════════════════════════

ABOUT
${name} | ${niche}
${bio ? bio + '\n' : ''}
AUDIENCE
Platform:        ${platform}
Audience Size:   ${parseInt(audienceSize).toLocaleString()}
Engagement Rate: ${engagement}%
Avg. Views:      ${parseInt(avgViews).toLocaleString()} per post

DEMOGRAPHICS
Age Range:       ${demoAge}
Geography:       ${demoGeo}

SPONSORSHIP PACKAGES
┌─────────────────────────────────────┐
│ Integration / Mention     $${rateIntegration}    │
│ Dedicated Content         $${rateDedicated}    │
│ Monthly Package (4x)      Ask       │
│ Custom Package            Ask       │
└─────────────────────────────────────┘
${pastPartners ? `\nPAST PARTNERS\n${pastPartners}\n` : ''}
CONTACT
Email: [your email]
Website: [your website]

═══════════════════════════════════════
`;

    document.getElementById('output')!.classList.remove('hidden');
    document.getElementById('media-kit-text')!.textContent = kit;

    document.getElementById('copy-btn')?.addEventListener('click', () => {
      navigator.clipboard.writeText(kit).then(() => {
        const btn = document.getElementById('copy-btn')!;
        btn.textContent = 'Copied!';
        setTimeout(() => btn.textContent = 'Copy to clipboard', 2000);
      });
    });
  });
</script>
