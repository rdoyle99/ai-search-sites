---
import Base from '../../layouts/Base.astro';
import { siteConfig } from '../../config';

const schema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Cold Email Volume Calculator",
  "applicationCategory": "BusinessApplication",
  "description": "Calculate how many domains and mailboxes you need based on your target daily cold email sending volume.",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
};
---

<Base
  title="Cold Email Volume Calculator | How Many Cold Emails Per Day"
  description="Free calculator: enter your target daily sending volume and get the exact number of domains, mailboxes, and warm-up timeline you need."
  schema={schema}
>
  <section class="max-w-3xl mx-auto px-4 sm:px-6 py-12 md:py-20">
    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900">Cold Email Volume Calculator</h1>
    <p class="mt-4 text-lg text-gray-600">
      Enter your target daily sending volume. We'll calculate the domains, mailboxes, and warm-up timeline you need.
    </p>

    <div class="mt-10 p-6 border border-gray-200 rounded-lg bg-white">
      <div class="space-y-6">
        <div>
          <label for="target-volume" class="block text-sm font-medium text-gray-700">Target emails per day</label>
          <input
            type="number"
            id="target-volume"
            value="500"
            min="10"
            max="50000"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-lg"
          />
        </div>
        <div>
          <label for="emails-per-mailbox" class="block text-sm font-medium text-gray-700">Emails per mailbox per day</label>
          <select id="emails-per-mailbox" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
            <option value="30">30 (conservative)</option>
            <option value="50" selected>50 (recommended)</option>
            <option value="75">75 (moderate)</option>
            <option value="100">100 (aggressive)</option>
          </select>
        </div>
        <div>
          <label for="mailboxes-per-domain" class="block text-sm font-medium text-gray-700">Mailboxes per domain</label>
          <select id="mailboxes-per-domain" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
            <option value="2" selected>2 (recommended)</option>
            <option value="3">3 (moderate)</option>
            <option value="4">4 (maximum)</option>
          </select>
        </div>
      </div>

      <div id="results" class="mt-8 p-6 bg-gray-50 rounded-lg">
        <h2 class="text-lg font-semibold text-gray-900">Your Infrastructure Needs</h2>
        <div class="mt-4 grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-500">Domains needed</p>
            <p id="domains-needed" class="text-3xl font-bold text-gray-900">5</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Total mailboxes</p>
            <p id="total-mailboxes" class="text-3xl font-bold text-gray-900">10</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Warm-up period</p>
            <p id="warmup-period" class="text-3xl font-bold text-gray-900">3 weeks</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Monthly domain cost</p>
            <p id="monthly-cost" class="text-3xl font-bold text-gray-900">~$50</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTAs -->
    <div class="mt-8 p-6 border border-blue-200 rounded-lg bg-blue-50">
      <p class="text-sm font-medium text-blue-900">Need help setting this up?</p>
      <p class="mt-1 text-sm text-blue-700">
        <a href={siteConfig.product.url} target="_blank" rel="noopener noreferrer" class="font-semibold underline">{siteConfig.product.name}</a> automates domain setup, mailbox provisioning, warm-up, and sending — all from one dashboard.
      </p>
      <div class="mt-4 flex gap-3">
        <a href={siteConfig.product.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-md hover:bg-blue-700 transition-colors">
          Automate with {siteConfig.product.name} &rarr;
        </a>
      </div>
    </div>

    <div class="mt-12 prose max-w-none">
      <h2>How This Calculator Works</h2>
      <p>
        The cold email volume calculator divides your target daily volume by the per-mailbox limit to determine how many mailboxes you need. It then divides by mailboxes-per-domain to get domain count. The warm-up period is estimated at 2–4 weeks depending on volume.
      </p>
      <p>
        The standard recommendation is <strong>50–100 emails per mailbox per day</strong> with <strong>2–3 mailboxes per domain</strong>. Going above these limits significantly increases your risk of landing in spam or getting your domain blacklisted.
      </p>
    </div>
  </section>
</Base>

<script>
  function calculate() {
    const targetVolume = parseInt((document.getElementById('target-volume') as HTMLInputElement).value) || 500;
    const emailsPerMailbox = parseInt((document.getElementById('emails-per-mailbox') as HTMLSelectElement).value);
    const mailboxesPerDomain = parseInt((document.getElementById('mailboxes-per-domain') as HTMLSelectElement).value);

    const totalMailboxes = Math.ceil(targetVolume / emailsPerMailbox);
    const domainsNeeded = Math.ceil(totalMailboxes / mailboxesPerDomain);
    const warmupWeeks = targetVolume <= 200 ? 2 : targetVolume <= 1000 ? 3 : 4;
    const monthlyCost = domainsNeeded * 10;

    document.getElementById('domains-needed')!.textContent = String(domainsNeeded);
    document.getElementById('total-mailboxes')!.textContent = String(totalMailboxes);
    document.getElementById('warmup-period')!.textContent = `${warmupWeeks} weeks`;
    document.getElementById('monthly-cost')!.textContent = `~$${monthlyCost}`;
  }

  document.getElementById('target-volume')?.addEventListener('input', calculate);
  document.getElementById('emails-per-mailbox')?.addEventListener('change', calculate);
  document.getElementById('mailboxes-per-domain')?.addEventListener('change', calculate);
  calculate();
</script>
